{
	"name": "harcmap_server",
	"version": "2.0.0",
	"author": {
		"name": "HarcMap Team",
		"email": "contact@harcmap.pl",
		"url": "https://harcmap.pl"
	},
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"start" : "node -r dotenv/config server.js",
		"watch" : "nodemon --exec npm start",
		"tests" : "jest",
		"tests:detectOpenHandles" : "jest --detectOpenHandles",
		"tests:watch" : "jest --watch",
		"mongo" : "docker run --name harcmap-mongo --rm -p 27017:27017 -v `pwd`/.db:/data/db -v `pwd`/bin/mongodb:/docker-entrypoint-initdb.d mongo",
		"mongo:windows" : "docker run --name harcmap-mongo --rm -p 27017:27017 -v %cd%/.db:/data/db -v %cd%/bin/mongodb:/docker-entrypoint-initdb.d mongo",
		"mongo:clean" : "rm -R ./.db",
		"_mongo:dummy" : "echo 'todo'",
		"pm2:start" : "pm2 start pm2-prod.config.js",
		"pm2:show" : "pm2 show 'Harcmap Stage'",
		"pm2:reload" : "pm2 reload pm2-prod.config.js"
	},
	"dependencies": {
		"connect-mongo" : "^4.5.0",
		"dotenv" : "^8.2.0",
		"express" : "^5.0.0-alpha.8",
		"express-session" : "^1.17.2",
		"joi" : "^17.4.0",
		"mongodb" : "^3.6.6",
		"passport" : "^0.4.1",
		"passport-local" : "^1.0.0",
		"pm2" : "^5.1.1",
		"sha3" : "^2.1.4",
		"swagger-jsdoc" : "^6.1.0",
		"swagger-ui-express" : "^4.1.6"
	},
	"devDependencies": {
		"faker": "^5.5.3",
		"jest": "^27.0.6",
		"nodemon": "^2.0.7",
		"supertest": "^6.1.4"
	}
}
