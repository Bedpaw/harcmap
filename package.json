{
  "name": "harcmap",
  "version": "1.3.0",
  "description": "HarcMap",
  "homepage": "https://github.com/dbetka/harcmap#readme",
  "bugs": {
    "url": "https://github.com/dbetka/harcmap/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dbetka/harcmap.git"
  },
  "license": "ISC",
  "author": "dbetka",
  "main": "app.js",
  "scripts": {
    "build:dev": "cd client && npm run build:dev",
    "build:dev:watch": "cd client && npm run build:dev:watch",
    "build:prod": "cd client && npm run build:prod",
    "build:prod:watch": "cd client && npm run build:prod:watch",
    "fill-database": "NODE_ENV=development node bin/prepareEvent.js",
    "import:sass:watch": "cd client && npm run import:sass:watch",
    "run:dev": "NODE_ENV=development node app.js",
    "run:mongodb": "docker run --name harcmap_mongo --rm -p 27017:27017 -v `pwd`/config/mongodb:/docker-entrypoint-initdb.d mongo",
    "run:mongodb:windows": "docker run --name harcmap_mongo --rm -p 27017:27017 -v %cd%/config/mongodb:/docker-entrypoint-initdb.d mongo",
    "run:pm2": "pm2 start app.js",
    "run:prod": "NODE_ENV=production node app.js",
    "tests:restapi": "jest --config=jest-node.config.js --testPathPattern=restapi"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "child_process": "^1.0.2",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "mongodb": "^3.5.3",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pm2": "^4.5.1",
    "sha3": "^2.1.1",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vue/eslint-config-standard": "^6.1.0",
    "@vue/eslint-config-typescript": "^8.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.19.1",
    "jest": "^27.0.6",
    "json2csv": "^5.0.6",
    "nodemailer": "^6.6.3",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=12.9.0",
    "npm": ">=6.0.0"
  }
}
